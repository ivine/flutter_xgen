{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "watch",
			"type": "shell",
			"command": "source ~/.zshrc && which node && yarn watch",
			"problemMatcher": [
				"$ts-webpack",
				"$tsc-watch"
			],
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "never",
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}